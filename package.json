{
  "name": "woof-monorepo",
  "version": "1.0.0",
  "description": "Woof Marketing - Agência Pet Operada por IA",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run shared:dev\" \"npm run server:dev\" \"npm run client:dev\" --names \"SHARED,SERVER,CLIENT\" --prefix-colors \"yellow,cyan,magenta\"",
    "dev:both": "concurrently \"npm run server:dev\" \"npm run client:dev\" --names \"SERVER,CLIENT\" --prefix-colors \"cyan,magenta\"",
    "shared:build": "npm --workspace shared run build",
    "shared:dev": "npm --workspace shared run dev",
    "shared:clean": "npm --workspace shared run clean",
    "shared:type-check": "npm --workspace shared run type-check",
    "server:dev": "npm --workspace server run dev",
    "client:dev": "npm --workspace client run dev",
    "build": "npm run shared:build && npm run client:build && npm run server:build",
    "client:build": "npm --workspace client run build",
    "server:build": "npm --workspace server run build",
    "start": "npm --workspace server run start",
    "lint": "npm --workspace client run lint",
    "type-check": "npm run shared:type-check && npm run client:type-check && npm run server:type-check",
    "client:type-check": "npm --workspace client run type-check",
    "server:type-check": "npm --workspace server run type-check",
    "clean": "npm run shared:clean && npm run client:clean && npm run server:clean",
    "check-auth": "node scripts/auth/check-auth.js",
    "debug-storage": "node scripts/debug/debug-storage.js",
    "postinstall": "echo '✅ Woof Marketing workspaces installed'"
  },
  "dependencies": {
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.52.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.525.0",
    "next": "15.4.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "eslint": "^9",
    "eslint-config-next": "15.4.2",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.5",
    "typescript": "^5"
  }
}
